<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
    </style>


    <!-- the theme applied to the application or activity -->
    <style name="RecipeABTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/actionBar</item>
    </style>

    <style name="actionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blue</item>
        <item name="android:actionBarStyle">@style/actionBarTabs</item>
        <!--<item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>-->
     </style>

    <!-- ActionBar tabs styles -->
    <style name="actionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
    <!-- tab indicator -->
        <item name="android:background">@color/green</item>
    </style>
</resources>
