<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/assistant_stepListItem_stepNum"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:text="@string/dummyStepNum"/>
    <TextView
        android:id="@+id/assistant_stepListItem_stepTitle"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/assistant_stepListItem_stepNum"
        android:textColor="@color/white"
        android:background="@color/light_orange"
        android:text="@string/dummyStepTitle"/>
    <TextView
        android:id="@+id/assistant_stepListItem_stepTimeTakes"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/assistant_stepListItem_stepTitle"
        android:text="@string/dummyTimeLeft"/>
</RelativeLayout>